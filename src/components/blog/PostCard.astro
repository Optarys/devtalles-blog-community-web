---
// src/components/blog/PostCard.astro
const { post } = Astro.props; // { href, title, excerpt, cover, tags[], date }
---

<article
  class="rounded-xl border border-white/10 bg-[#1A1431] hover:border-white/20 transition"
>
  <a href={post.href} class="block">
    <img
      src={post.cover ?? "/covers/default.jpg"}
      alt={post.title}
      class="w-full h-48 object-cover rounded-t-xl"
      loading="lazy"
    />
    <div class="p-5 space-y-2">
      <h3 class="text-lg font-semibold text-[var(--title)]">{post.title}</h3>
      {
        post.excerpt && (
          <p class="text-sm text-[var(--text)]/80">{post.excerpt}</p>
        )
      }
      <p class="text-xs text-[var(--text)]/60">{post.date}</p>
      <div class="flex flex-wrap gap-2 mt-2">
        {
          post.tags?.map((t: string) => (
            <span class="text-xs rounded bg-[var(--accent)]/20 text-[var(--accent)] px-2 py-1">
              {t}
            </span>
          ))
        }
      </div>
    </div>
  </a>
</article>
