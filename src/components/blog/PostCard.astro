---
const { post } = Astro.props;
---

<article
  class="rounded-xl border border-white/10 bg-[#1A1431] hover:border-white/20 transition flex flex-col"
>
  <a href={post.href} class="block flex-1">
    <img
      src={post.cover}
      alt={post.title}
      class="w-full h-40 object-cover rounded-t-xl"
      loading="lazy"
    />

    <div class="p-4 flex flex-col gap-2">
      <h3
        class="text-base font-semibold text-[var(--color-title)] line-clamp-2"
      >
        {post.title}
      </h3>
      <p class="text-sm text-[var(--color-text)]/80 line-clamp-3">
        {post.excerpt}
      </p>
      <p class="text-xs text-[var(--color-text)]/60">{post.date}</p>

      <div class="flex flex-wrap gap-1 mt-1">
        {
          post.tags?.map((t: any) => (
            <span class="text-[10px] px-2 py-0.5 rounded-full bg-[var(--color-accent)]/20 text-[var(--color-accent)] font-medium">
              {t}
            </span>
          ))
        }
      </div>
    </div>
  </a>
</article>
