---
import RootLayout from "@/layouts/RootLayout.astro";
import TopNav from "@/components/ui/TopNav.tsx";
import FooterSimple from "@/components/ui/FooterSimple.tsx";

// Secciones
import Hero from "@/components/sections/Hero.astro";
import PostList from "@/components/sections/PostList.astro";
import Features from "@/components/sections/Features.astro";
import Mascot from "@/components/sections/Mascot.astro";
import CTA from "@/components/sections/CTA.astro";

// Divisor suave (opción A)
import SectionDivider from "@/components/ui/SectionDivider.astro";

// Mock temporal
const posts = Array.from({ length: 6 }).map((_, i) => ({
  href: `/blog/post-${i + 1}/`,
  title: `Post ${i + 1}`,
  excerpt: "Un pequeño resumen del contenido de este artículo.",
  cover: "/assets/png/DEVI NORMAL.png",
  tags: ["astro", "react"].slice(0, (i % 2) + 1),
  date: "13/09/2025",
}));
---

<RootLayout title="Inicio">
  <TopNav currentPath={Astro.url.pathname} client:load />

  <Hero />

  <PostList posts={posts} />

  <SectionDivider />

  <Features />

  <Mascot />
  <CTA />

  <FooterSimple client:load />
</RootLayout>
